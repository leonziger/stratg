section.contact-us
  .container.contact-us__container
    h2.contact-us__title Contact us right now
    p.contact-us__subtitle StraTG specializes in organizational consulting, professional workshops, training, business strategy, marketing and communications.
    form.contact-us__form
      .contact-us__fields
        input.contact-us__field(name='name' placeholder='Your Name' autocomplete='off' minlength='4' required)
        input.contact-us__field(name='phone' placeholder='Your Phone' autocomplete='off' minlength='4' required)
        input.contact-us__field(name='company' placeholder='Company' autocomplete='off' minlength='4' required)
        textarea.contact-us__area(name='message' placeholder='Your Message' autocomplete='off' minlength='20' required)
      button.button.contact-us__submit Send
